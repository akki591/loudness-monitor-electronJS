{
  "name": "voice-control",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "rmdir /s /q dist && electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-tray-window": "^1.2.7"
  },
  "build": {
    "appId": "com.sound.voice-control",
    "productName": "Voice Control",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "msi",
      "icon": "images/volume.png"
    }
  }
}
